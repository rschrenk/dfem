<div class="login">
    <div class="alert alert-info">
        {{#str}} select_language, login {{/str}}
        {{{langselector}}}
    </div>
    <h3>{{#str}} welcome, login {{/str}}</h3>

    <p>{{#str}} welcome_text, login {{/str}}</p>
    <p>{{#str}} welcome_text_moreinfo, login, , { "wwwroot": "{{CFG.wwwroot}}" } {{/str}}</p>
    <p>{{#str}} enter_email, login {{/str}}</p>
    <form method="POST" action="" id="login-{{uniqid}}">
        <input type="email" name="email" placeholder="{{#str}} email_dummy, login {{/str}}" />
        <a href="#" onclick="document.getElementById('login-{{uniqid}}').submit();"
            class="btn btn-primary">
            <i class="fas fa-sign-in-alt"></i>
            {{#str}} proceed, login {{/str}}
        </a>
    </form>
</div>
