<div class="tools tool">
    <h3>{{tool.name}}</h3>
    {{#tool.stored}}
        <p class="alert alert-success">
            {{#str}} data_was_stored, tools {{/str}}
        </p>
    {{/tool.stored}}
    <form method="POST" action="">
        <input type="hidden" name="id" value="{{id}}" />
        <input type="hidden" name="formsent" value="1" />
        <table border="0">
            {{#tool.fieldtypes}}
                <tr>
                    <th colspan="2">{{{label}}}</th>
                </tr>
                {{#fields}}
                    <tr>
                        <td>{{{label}}}</td>
                        <td>
                            <input type="checkbox" name="{{field}}"
                                {{#enabled}} checked="checked" {{/enabled}} />
                        </td>
                    </tr>
                {{/fields}}
            {{/tool.fieldtypes}}
            <tr>
                <th>
                    <input type="submit" value="{{#str}} send, core {{/str}}" class="btn btn-primary" />
                    {{#tool.estimation.id}}
                        <a href="{{CFG.wwwroot}}/tools/results.php?id={{tool.estimation.id}}" class="btn btn-secondary">
                            {{#str}} show_tool_results, tools {{/str}}
                        </a>
                    {{/tool.estimation.id}}
                </th>
            </tr>
        </table>
    </form>

</div>
